&НаСервере
Процедура ВыгрузитьНаСервере()
	
	// Сделаем выборку элементов Номенклатура.
	ВыборкаНоменклатуры = Справочники.Номенклатура.Выбрать();
	
	// Создать файл XML.
	Файл = Новый ЗаписьXML;
	
	// Указываем путь, куда будет сохранён файл (&НаСервереБезКонтекста)
	//Файл.ОткрытьФайл("C:\Users\snopo\OneDrive\Рабочий стол\1С_Обмен\upload.xml");
	
  	// Предложение вабора пути к файлу 
	Файл.ОткрытьФайл(Объект.ПутьКФайлу);
    
	// Техническая информация
	Файл.ЗаписатьОбъявлениеXML();
	
	Файл.ЗаписатьНачалоЭлемента("Root");
	
	Пока ВыборкаНоменклатуры.Следующий() Цикл
		
		ЭлементВыборки = ВыборкаНоменклатуры.Ссылка;
		
		// Добавить элементы в файл
		Файл.ЗаписатьНачалоЭлемента("Номенклатура");
		
		// Добавляем атрибуты
		Файл.ЗаписатьАтрибут("Код", ВыборкаНоменклатуры.Код);
		Файл.ЗаписатьАтрибут("ЦенаЗакупки", Строка(ВыборкаНоменклатуры.ЦенаЗакупки));
		Файл.ЗаписатьАтрибут("ЦенаРеализации", Строка(ВыборкаНоменклатуры.ЦенаРеализации));
		Файл.ЗаписатьАтрибут("Родитель", Строка(ВыборкаНоменклатуры.Родитель));
		
		Файл.ЗаписатьАтрибут("ЭтоГруппа", ?(ВыборкаНоменклатуры.ЭтоГруппа, "1", "0"));
		
		Файл.ЗаписатьТекст(ВыборкаНоменклатуры.Наименование);
		
		// Закрываем элемент
		Файл.ЗаписатьКонецЭлемента();	
	КонецЦикла;
	
	// Закрываем корневой узел
	Файл.ЗаписатьКонецЭлемента();
	
	// Запись файла на диске
	Файл.Закрыть()
	
КонецПроцедуры
